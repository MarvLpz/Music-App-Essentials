<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimary">

    <TextView
        android:id="@+id/tvTuner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:fontFamily="monospace"
        android:gravity="center"
        android:paddingBottom="100dp"
        android:textColor="#FFB2B0B0"
        android:textSize="200sp"
        tools:layout_editor_absoluteX="131dp"
        tools:layout_editor_absoluteY="235dp" />

    <com.example.marvin.kuwerdas.tuner.TunerView
        android:id="@+id/tunerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/adView_tuner"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView_tuner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-5758718428750800/7179179652"/>


</RelativeLayout>