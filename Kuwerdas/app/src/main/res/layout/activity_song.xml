<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.marvin.myadvancerv.song.SongActivity">

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floatingActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/plus"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:backgroundTint="#76d177"
        app:useCompatPadding="true" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floatingDeleteButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="76dp"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/delete"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:backgroundTint="#f57777"
        app:useCompatPadding="true" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floatingTransposeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="152dp"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/plus"
        app:backgroundTint="#76d177"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:useCompatPadding="true" />

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical"
        >



    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical"
        >

        <EditText
            android:id="@+id/etTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:text="Kisapmata"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        <EditText
            android:id="@+id/etArtist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:text="Rivermaya"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2" />
<!--        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal">


            &lt;!&ndash;           <fragment
                            android:id="@+id/fragment_place"
                            android:name="com.example.marvin.myadvancerv.Fragment.ChordDrawer"
                            android:layout_width="318dp"
                            android:layout_height="95dp"
                            android:layout_gravity="center_horizontal" />&ndash;&gt;


        </LinearLayout>-->
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvSong"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/frame_place"
        android:layout_width="318dp"
        android:layout_height="112dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:background="#641f378e"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:paddingVertical="10dp">

            <TextView
                android:id="@+id/tv_dragChord1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="5dp"
                android:paddingVertical="3dp"
                android:text="E"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/tv_dragChord2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="5dp"
                android:paddingVertical="3dp"
                android:text="F"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/tv_dragChord3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="5dp"
                android:paddingVertical="3dp"
                android:text="G"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/tv_dragChord4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="5dp"
                android:paddingVertical="3dp"
                android:text="A"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/tv_dragChord5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="5dp"
                android:paddingVertical="3dp"
                android:text="B"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/tv_dragChord6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="5dp"
                android:paddingVertical="3dp"
                android:text="C"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/tv_dragChord7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="5dp"
                android:paddingVertical="3dp"
                android:text="D"
                android:textSize="20dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            >

            <top.defaults.view.PickerView
                android:id="@+id/accidental"
                android:layout_width="110dp"
                android:layout_height="wrap_content" />

            <top.defaults.view.PickerView
                android:id="@+id/scale"
                android:layout_width="110dp"
                android:layout_height="wrap_content"/>

            <top.defaults.view.PickerView
                android:id="@+id/number"
                android:layout_width="110dp"
                android:layout_height="wrap_content" />

        </LinearLayout>


    </LinearLayout>
</android.support.constraint.ConstraintLayout>
