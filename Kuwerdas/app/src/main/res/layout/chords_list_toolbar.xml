<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frame_place"
    android:layout_width="match_parent"
    android:layout_height="65dp"
    android:layout_alignParentBottom="true"
    android:layout_alignParentStart="true"
    android:layout_marginBottom="11dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="65dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:gravity="center_vertical|center_horizontal|center"
        android:orientation="horizontal"
        android:paddingVertical="10dp">

        <TextView
            android:id="@+id/tv_dragChord6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingVertical="3dp"
            android:text="C"
            android:textColor="@color/colorToolbarText"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tv_dragChord7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingVertical="3dp"
            android:text="D"
            android:textColor="@color/colorToolbarText"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tv_dragChord1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingVertical="3dp"
            android:text="E"
            android:textColor="@color/colorToolbarText"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tv_dragChord2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingVertical="3dp"
            android:text="F"
            android:textColor="@color/colorToolbarText"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tv_dragChord3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingVertical="3dp"
            android:text="G"
            android:textColor="@color/colorToolbarText"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tv_dragChord4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingVertical="3dp"
            android:text="A"
            android:textColor="@color/colorToolbarText"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tv_dragChord5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingVertical="3dp"
            android:text="B"
            android:textColor="@color/colorToolbarText"
            android:textSize="20dp" />

    </LinearLayout>

    <Button
        android:id="@+id/btnExpandChords"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="30dp"
        android:layout_weight="1"
        android:background="@drawable/collapse_white"
        android:gravity="center_vertical"
        android:padding="30dp"
        android:textColor="@android:color/white" />

</RelativeLayout>