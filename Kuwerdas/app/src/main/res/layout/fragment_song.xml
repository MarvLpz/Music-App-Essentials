<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvSong"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:id="@+id/frame_place"
        android:layout_width="318dp"
        android:layout_height="112dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:background="#641f378e"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:paddingVertical="10dp">

            <TextView
                android:id="@+id/tv_dragChord1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="5dp"
                android:paddingVertical="3dp"
                android:text="E"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/tv_dragChord2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="5dp"
                android:paddingVertical="3dp"
                android:text="F"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/tv_dragChord3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="5dp"
                android:paddingVertical="3dp"
                android:text="G"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/tv_dragChord4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="5dp"
                android:paddingVertical="3dp"
                android:text="A"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/tv_dragChord5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="5dp"
                android:paddingVertical="3dp"
                android:text="B"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/tv_dragChord6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="5dp"
                android:paddingVertical="3dp"
                android:text="C"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/tv_dragChord7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="5dp"
                android:paddingVertical="3dp"
                android:text="D"
                android:textSize="20dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            >

            <top.defaults.view.PickerView
                android:id="@+id/accidental"
                android:layout_width="110dp"
                android:layout_height="wrap_content" />

            <top.defaults.view.PickerView
                android:id="@+id/scale"
                android:layout_width="110dp"
                android:layout_height="wrap_content"/>

            <top.defaults.view.PickerView
                android:id="@+id/number"
                android:layout_width="110dp"
                android:layout_height="wrap_content" />

        </LinearLayout>


    </LinearLayout>
</RelativeLayout>