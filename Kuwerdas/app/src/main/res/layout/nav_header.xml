    android:padding="16dp"
    android:theme="@style/ThemeOverlay.AppCompat.Dark"
    android:orientation="vertical">


    <ImageView
        android:layout_height="130dp"
        android:layout_width="130dp"
        android:src="@mipmap/iconlegit"
