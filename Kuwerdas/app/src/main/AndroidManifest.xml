<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.marvin.kuwerdas">

    <uses-permission android:name="android.permission.RECORD_AUDIO"/>
    <uses-permission android:name="android.permission.VIBRATE" />


    <application
        android:allowBackup="true"
        android:icon="@mipmap/iconappex"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/iconappex"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.google.android.gms.ads.com.example.marvin.kuwerdas"
            android:value="ca-app-pub-5758718428750800~3843511820"/>

        <activity android:name=".MainActivity"
            android:windowSoftInputMode="adjustResize"
            android:theme="@style/splashScreenTheme"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>